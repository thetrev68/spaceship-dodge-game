{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@core/*": ["./src/core/*"],
      "@game/*": ["./src/game/*"],
      "@entities/*": ["./src/entities/*"],
      "@systems/*": ["./src/systems/*"],
      "@input/*": ["./src/input/*"],
      "@ui/*": ["./src/ui/*"],
      "@effects/*": ["./src/effects/*"],
      "@utils/*": ["./src/utils/*"]
    },
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "checkJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}
