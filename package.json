{
  "name": "spaceship-dodge-game",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build:css": "tailwindcss -i ./src/input.css -o ./styles/tailwind.css",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:repeat": "vitest run --repeat 3",
    "test:ui": "vitest --ui",
    "knip": "knip",
    "docs": "npx typedoc --entryPointStrategy expand src --out docs/api"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@vitest/coverage-v8": "^4.0.15",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "gh-pages": "^6.3.0",
    "jsdom": "^24.1.3",
    "knip": "^5.70.2",
    "postcss": "^8.4.47",
    "tailwindcss": "^4.1.17",
    "typedoc": "^0.27.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.24.0",
    "vite": "^7.2.4",
    "vitest": "^4.0.15"
  }
}
